                text_color:0,0,0,.5
                icon_color:0,0,0,.5
                size_hint:1,1
                font_size: '27sp'
                bold:True

<MusicListScreen>:
    name:'music_list_screen'
    MDBoxLayout:
        orientation:'vertical'
        adaptive_size: True
        size_hint:1,1
        md_bg_color:'orange'
        MDTopAppBar:
            md_bg_color:'orange'
            pos_hint:{'top':1}
            elevation:1
            left_action_items:[['arrow-left']]
            right_action_items:[['magnify'],['dots-vertical']]

        MDBoxLayout:
            adaptive_size:True
            orientation:'vertical'
            size_hint:1,1
            MDScrollView:
                AllMusic:

<VideoListScreen>:
    name:'video_list_screen'
