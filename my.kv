                        MDCard:
                            size_hint:None,None
                            width:'70dp'
                            height:'70dp'
                            pos_hint:{'center_y':.5}
                            md_bg_color:'yellow'
                            MDIconButton
                                icon:'video'
                                theme_icon_color:'Custom'
                                icon_color:0,0,0,.5
                                size_hint:1,1
                        MDCard:
                            size_hint:None,None
                            width:'70dp'
                            height:'70dp'
                            pos_hint:{'center_y':.5}
                            md_bg_color:'yellow'
                            MDIconButton
                                icon:'heart'
                                theme_icon_color:'Custom'
                                icon_color:1,0,0,.5
                                size_hint:1,1
                        MDLabel:
                            text:'Playlist'
                            halign:'left'
                            theme_text_color:"Custom"
                            text_color:0,0,0,.5
                            size_hint:None,None
                            bold:True
                            width:'70sp'
