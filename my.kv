#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import os os
MyScreenManager:
    transition: NoTransition()
    MainScreen:
    MusicListScreen:
    VideoListScreen:
    SettingScreen:
<MainScreen>:
    name:'main'
    MDScreen:
        #orientation:'vertical'
        #adaptive_size:True
        md_bg_color:'orange'
        size_hint:1,1
        spacing:'20dp'
        MDTopAppBar:
            pos_hint:{'top':1} 
            elevation:0
            md_bg_color:'orange'
            left_action_items: [['menu']]

        MDLabel:
            text:'      Categories'
            size_hint:1,None
            height:'30dp'
            #theme_text_color: 'Custom'
            #text_color:1,1,1,1
            bold: True
            pos_hint:{'top':.90}
            font_style:'H5'
        MDCard:
            size_hint: .8,.1
            pos_hint:{'top':.85,'center_x':.5}
            md_bg_color:'yellow'
            radius:[10]
            MDRectangleFlatIconButton:
                icon:'music-note'
                line_color:0,0,0,0
                text:'Music -'
                theme_text_color:'Custom'
                icon_color:0,0,0,.5
                text_color:0,0,0,.5
                size_hint:1,1
                font_size: '27sp'
                bold:True
                on_release:root.manager.current = 'music_list_screen'
        MDBoxLayout:
            size_hint:1,.21
            orientation:'vertical'
            pos_hint:{'top':.73}
            MDBoxLayout:
                size_hint:.8,1
                orientation:'vertical'
                pos_hint:{'center_x':.5}
                ScrollView:
                    MDGridLayout:
                        rows:2
                        size_hint:.9,.9
                        spacing:'20dp'
                        MDCard:
                            size_hint:None,None
                            width:'70dp'
                            height:'70dp'
                            pos_hint:{'center_y':.5}
                            md_bg_color:'yellow'
                            MDIconButton
                                icon:'music-note'
                                theme_icon_color:'Custom'
                                icon_color:0,0,0,.5
                                size_hint:1,1
                        MDCard:
                            size_hint:None,None
                            width:'70dp'
                            height:'70dp'
                            pos_hint:{'center_y':.5}
                            md_bg_color:'yellow'
                            MDIconButton
                                icon:'heart'
                                theme_icon_color:'Custom'
                                icon_color:1,0,0,.5
                                size_hint:1,1
                        MDCard:
                            size_hint:None,None
                            width:'70dp'
                            height:'70dp'
                            pos_hint:{'center_y':.5}
                            md_bg_color:'yellow'
                            MDIconButton
                                icon:'album'
                                theme_icon_color:'Custom'
                                icon_color:0,0,0,.5
                                size_hint:1,1


                        MDCard:
                            size_hint:None,None
                            height:'70dp'
                            width:'70dp'
                            pos_hint:{'center_y':.5}
                            md_bg_color:'yellow'
                            MDIconButton
                                icon:'music'
                                theme_icon_color:'Custom'
                                icon_color:0,0,0,.5
                                size_hint:1,1
                        MDLabel:
                            text:'playlist'
                            halign:'left'
                            theme_text_color:"Custom"
                            text_color:0,0,0,.5
                            size_hint:None,None
                            bold:True
                            width:'70sp'
                            height:'20sp'

                        MDLabel:
                            text:'Favorites'
                            halign:'left'
                            theme_text_color:"Custom"
                            text_color:0,0,0,.5
                            size_hint:None,None
                            bold:True
                            width:'70sp'
                            height:'20sp'

                        MDLabel:
                            text:'Album'
                            halign:'left'
                            theme_text_color:"Custom"
                            text_color:0,0,0,.5
                            size_hint:None,None
                            bold:True
                            width:'70sp'
                            height:'20sp'

                        MDLabel:
                            text:'Artist'
                            halign:'left'
                            theme_text_color:"Custom"
                            text_color:0,0,0,.5
                            size_hint:None,None
                            bold:True
                            width:'70sp'
                            height:'20sp'

        MDCard:
            size_hint: .8,.1
            pos_hint:{'top':.5,'center_x':.5}
            md_bg_color:'yellow'
            radius:[10]
            MDRectangleFlatIconButton:
                icon:'video'
                line_color:0,0,0,0
                text:'Videos -'
                theme_text_color:'Custom'
                icon_color:0,0,0,.5
                text_color:0,0,0,.5
                size_hint:1,1
                font_size: '27sp'
                bold:True
                on_release:root.manager.current = 'video_list_screen'
        MDBoxLayout:
            size_hint:1,.19
            orientation:'vertical'
            pos_hint:{'top':.385}
            MDBoxLayout:
                size_hint:.8,1
                orientation:'vertical'
                pos_hint:{'center_x':.5}
                ScrollView:
                    MDGridLayout:
                        rows:2
