                        MDLabel:
                            text:'Favorite'
                            halign:'left'
                            theme_text_color:"Custom"
                            text_color:0,0,0,.5
                            size_hint:None,None
                            width:'70sp'
                            bold:True
                            height:'20sp'



        MDCard:
            size_hint: .8,.1
            pos_hint:{'top':.18,'center_x':.5}
            md_bg_color:'yellow'
            radius:[10]
            MDRectangleFlatIconButton:
                icon:'lock'
                line_color:0,0,0,0
